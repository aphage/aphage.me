				.des-of-author-nav {
					width: 105px;
					float: left;
					.des-of-author-title {
						display: block;
						font-weight: 700;
						cursor: pointer;
						&.active:after {
							content: "→";
						}
						&.active {
							color: #97dffd;
						}
					}
				}
				.des-of-author-panel {
					margin-left: 105px;
					.des-of-author-des {
						display: none;
						&.active {
							display: block;
						}
					}
				}
			}
		}
		.post-toc {
			overflow: auto;
			ol {
				margin: 0;
				padding: 0 2px 5px 10px;
				text-align: left;
				list-style: none;
				font-size: 14px;
				a {
					transition-duration: .2s;
					transition-timing-function: ease-in-out;
					transition-delay: 0s;
					transition-property: all;
					color: #666;
					border-bottom-color: #ccc;
				}
			}
			.nav-item {
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				line-height: 1.8;
			}
			.nav .active-current>a {
				color: #fc6423;
				border-bottom-color: #fc6423;
			}
		}
		.sidebar-panel {
			display: none;
		}
		.sidebar-panel-active {
			display: block;
		}
	}
}
.comments {
    background: #fff;
    margin: 0;
    padding: 40px;
    border-radius: 5px;
}

.page-post-detail .comments {
    overflow: hidden;
}




.posts-collapse {
    position: relative;
    margin-left: 55px;
	z-index: 0;
	.posts-collapse-x {
		position: relative;
		&::after {
			content: " ";
			position: absolute;
			top: 78px;
			bottom: 13px;
			left: -2px;
			width: 4px;
			background: rgba(151,223,253,.1);
			z-index: -1;
		}
	}
