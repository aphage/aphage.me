$fontawesome = hexo-config('vendors.fontawesome')
@import $fontawesome
@import 'https://cdn.jsdelivr.net/npm/disqusjs@1.2/dist/disqusjs.css'

@import '_mixins/base'
@import '_variables/base'
@import "_common/components/highlight";

@font-face {
  font-family: 'Candyshop';
  src: url(/fonts/Candyshop.otf);
}

body {
	position: relative;
	margin: 0;
	font-family: "PingFang SC","Microsoft YaHei",Lato,sans-serif;
	font-size: 14px;
	line-height: 2;
	color: #555;
	background:#efefef;
	cursor:url('../images/cursor.png'),auto;
}
ul,li {
	padding: 0;
	margin: 0;
	list-style: none;
}

a {
	text-decoration: none;
	&:visited,&:hover,&:active {
		text-decoration: none;
	}
}

a {
	color: blue;
	&:hover {
		color: #f900ff;
	}
	&:hover,&:active {
		outline: 0;
	}
}

button, input, optgroup, select, textarea {
    color: inherit;
    font: inherit;
    margin: 0;
}

input {
    line-height: normal;
}

img {
    border: 0;
	display: block;
    margin: auto;
    max-width: 100%;
    height: auto;
}

h1, h2, h3, h4, h5, h6 {
    margin: 0;
    padding: 0;
    font-weight: 700;
    line-height: 1.5;
    font-family: "PingFang SC","Microsoft YaHei",Lato,sans-serif;
}

article, aside, details, figcaption, figure, footer, header, hgroup, main, menu, nav, section, summary {
    display: block;
}

[hidden],template {
	display:none
}

.clear-float {
	clear: both;
}
.btn {
    display: inline-block;
    padding: 0 20px;
    font-size: 14px;
    color: #555;
    background: #fff;
    border: 2px solid #555;
    text-decoration: none;
    border-radius: 2px;
    transition-property: background-color;
    transition-duration: .2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    line-height: 2;
}

.btn {
    background: #97dffd;
    color: #fff;
    font-size: 13px;
    padding: 1px 15px;
    border-radius: 5px;
    border: none;
}

.btn:hover {
    border-color: #222;
    color: #fff;
    background: #97dffd;
}
.scaleup {
    transition: .3s ease;
}

.scaleup:hover {
    -webkit-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -ms-transform: scale(1.1);
    -o-transform: scale(1.1);
    transform: scale(1.1);
}



.container {
    position: relative;
    min-height: 100%;
    overflow-x: hidden;
}

.site-nav {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	text-shadow: 0 1px 1px rgba(11, 8, 231, .6);
	background: linear-gradient(rgba(0,0,0,.3),transparent);
	z-index: 3;
}

.menu {
	position: relative;
	margin-top: 0;
	padding-left: 0;
    margin: 0 auto;
    width: 1110px;
    text-align: left;
	.menu-item {
		position: relative;
		display: inline-block;
		height: 58px;
		line-height: 58px;
		border: 0;
		text-align: left;
		color: #fff;
		.submenu {
			position: absolute;
			left: -10px;
			right: -10px;
			+mobile(){
				left: -30px;
				right: -30px;
			}
			top: 58px;
			text-align: center;
			list-style-type: none;
			background: #fff;
			overflow: hidden;
			the-transition-ease-out()
			height: 0;
			border-radius: 4px;
			box-shadow: 0 2px 4px rgba(0,0,0,.14);
			a {
				border-bottom: none;
				line-height: 20px;
				padding: 10px 0;
				color: #444;
				text-shadow: none;
				font-size: 14px;
			}
			.submenu-item:hover {
				background: #eee;
			}
		}
		
		a {
			display: block;
			box-sizing: border-box;
			padding: 0 12px;
			line-height: inherit;
			color: #fff;
			font-size: 16px;
			border-bottom: none;
			the-transition-ease-out()
			i {
				margin-right: 5px;
				+mobile(){
					display: none;
				}
			}
			br {
				display: none;
			}
		}
		&.search {
			float: right;
			margin: 0 0 0 20px;
			.search-input {
				border: none;
				border-radius: 4px;
				color: #555;
				font-size: 13px;
				outline: 0;
				width: 0;
				padding: 3px 0;
				transition: all .5s ease-in-out;
			}
			.search-submit {
				cursor: pointer;
				margin-left: 5px;
				background: 0 0;
				padding: 0;
				border: none;
				outline: 0;
				i {
					font-size: 17px;
					margin: 0;
					text-shadow: 0 1px 1px rgba(0,0,0,.3);
				}
			}
			&:hover .search-input {
				padding: 8px;
				width: 120px;
			}
			+mobile(){
				display: none;
			}
		}
		&.online {
			float: right;
			font-size: 12px;
			margin: 0;
			+mobile(){
				display: none;
			}
		}
		+mobile(){
			text-align: center;
			padding: 0;
		}
		+mobile(){
			flex: 1;
			-webkit-box-flex: 1;
			margin: 0;
		}
	}
	+mobile(){
		display: flex;
		width: 100%;
	}
}

$header_image = hexo-config('header_image')
