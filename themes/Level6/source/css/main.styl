	}
}

.site-meta {
    padding: 20px 0;
    color: #fff;
	margin: 0;
    text-align: center;
}
.brand {
	padding: 0;
	background: 0 0;
	position: relative;
	top: 320px;
	font-size: 68px;
	text-align: center;
	text-shadow: 0 1px 1px #47456d;
	margin-bottom: 130px;
	z-index: 1;
	font-family: Candyshop;
	display: block;
	color: #fff;
	border-bottom: none;
	+mobile(){
		font-size: 7.8vw;
		top: 156px;
		margin-bottom: 0;
	}
	.site-title {
		text-shadow: 1px 1px 0 #ff3f1a, -1px -1px 0 #00a7e0;
		.animate {
			transition: .3s;
			position: absolute;
			top: 0;
			span {
				position: absolute;
				opacity: 0;
			}
			svg {
				fill: #f900ff;
				overflow: visible;
				text-shadow: none;
				height: 1px;
			}
			use {
				stroke: #fff;
				stroke-width: 13px;
				stroke-linejoin: round;
			}
		}
