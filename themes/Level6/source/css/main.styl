	width: 315px;
	box-shadow: none;
	margin: 0;
    background: #fff;
    border-radius: 5px;
	margin-left: 15px;
	float: right;
	position: static;
	+mobile(){
		display: none;
	}
	.sidebar-inner {
		padding: 20px 16px;
		box-sizing: border-box;
		width: 315px;
		color: #555;
		background: #fff;
		box-shadow: initial;
		border-radius: initial;
		border-radius: 5px;
		z-index: 2;
		text-align: center;
		&.affix {
			position: fixed;
			top: 52px;
		}
		&.affix-bottom {
			position: absolute;
			width: 315px;
		}
		.sidebar-nav {
			margin: 0 0 20px;
			padding-left: 0;
		}
		.post-toc-wrap {
			overflow: hidden;
		}
		.site-overview-wrap {
			overflow: hidden;
		}
		.sidebar-nav {
			margin: 0 0 20px;
			padding-left: 0;
			li {
				display: inline-block;
				cursor: pointer;
				border-bottom: 1px solid transparent;
				font-size: 14px;
				color: #555;
